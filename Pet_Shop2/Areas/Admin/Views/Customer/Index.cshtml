@model IPagedList<Pet_Shop2.Models.Account>
@using Pet_Shop2.Models
@using X.PagedList
@using X.PagedList.Mvc.Common
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Danh sách khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Linkheader {
    <link rel="stylesheet" href="~/Admin_assets/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <link rel="stylesheet" href="~/Admin_assets/plugins/select2/css/select2.min.css">
    <style>
        .table th, .table td {
            vertical-align: middle !important;
            padding: 0.75rem;
        }

        .form-label {
            font-weight: bold;
            margin-bottom: .5rem;
        }

        .pagination {
            justify-content: flex-end !important;
        }

        .btn-xs {
            padding: .25rem .5rem;
            font-size: .875rem;
            line-height: 1.5;
            border-radius: .2rem;
        }

        .table-bordered th, .table-bordered td {
            border: 1px solid #dee2e6;
        }

        .thead-light th {
            background-color: #e9ecef;
            border-color: #dee2e6;
        }
    </style>
}

<div class="page-header">
    <h2 class="header-title">@ViewData["Title"]</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="@Url.Action("Index", "Home", new { Area = "Admin" })" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <span class="breadcrumb-item active">Danh sách khách hàng</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-header bg-primary">
        <h4 class="card-title text-white">
            <i class="fas fa-filter"></i> Bộ lọc và Tìm kiếm
        </h4>
    </div>
    <div class="card-body">
        <form action="@Url.Action("Index", "Customer", new { Area = "Admin" })" method="get" class="mb-4">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <div class="form-group">
                        <label for="searchString" class="form-label">Từ khóa tìm kiếm</label>
                        <input type="search" id="searchString" name="searchString" class="form-control form-control-sm" placeholder="Tên, email, SĐT, username..." value="@ViewBag.CurrentSearch">
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="form-group">
                        <label for="activeStatus" class="form-label">Trạng thái</label>
                        <select id="activeStatus" name="activeStatus" class="form-control form-control-sm select2bs4" asp-items="ViewBag.ActiveStatusList" style="width: 100%;">
                        </select>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="form-group">
                        <label for="sortBy" class="form-label">Sắp xếp</label>
                        <select id="sortBy" name="sortBy" class="form-control form-control-sm select2bs4" asp-items="ViewBag.SortByList" style="width: 100%;">
                        </select>
                    </div>
                </div>
                <div class="col-md-3 d-flex align-items-end mb-3">
                    <div class="form-group w-100">
                        <label class="form-label d-block">&nbsp;</label>
                        <button type="submit" class="btn btn-primary btn-sm btn-block mb-1"><i class="fas fa-search"></i> Lọc</button>
                        <a href="@Url.Action("Index", "Customer", new { Area = "Admin" })" class="btn btn-secondary btn-sm btn-block">Làm mới</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kết quả danh sách khách hàng (@(Model != null ? Model.TotalItemCount : 0) mục)</h3>
    </div>
    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-bordered table-sm mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th class="text-center align-middle" style="width: 40px;">#</th>
                            <th class="text-center align-middle">ID</th>
                            <th class="align-middle">Họ và tên</th>
                            <th class="align-middle">Email</th>
                            <th class="text-center align-middle">Điện thoại</th>
                            <th class="text-center align-middle">Trạng thái</th>
                            <th class="text-center align-middle" style="width: 130px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int startIndex = (Model.PageNumber - 1) * Model.PageSize + 1;
                            foreach (var (item, idx) in Model.Select((value, i) => (value, i)))
                            {
                                int currentIndex = startIndex + idx;
                                <tr>
                                    <td class="text-center align-middle">@currentIndex</td>
                                    <td class="text-center align-middle">@item.Id</td>
                                    <td class="align-middle">@item.FullName</td>
                                    <td class="align-middle">@item.Email</td>
                                    <td class="text-center align-middle">@item.Phone</td>
                                    <td class="text-center align-middle">
                                        @if (item.Active == true)
                                        {
                                            <span class="badge badge-success font-weight-semibold p-2" style="font-size: 0.85rem;">Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger font-weight-semibold p-2" style="font-size: 0.85rem;">Không HĐ</span>
                                        }
                                    </td>
                                    <td class="text-center align-middle">
                                        <a class="btn btn-info btn-sm m-1" href="@Url.Action("Details", "Customer", new { Area = "Admin", id = item.Id })" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a class="btn btn-danger btn-sm m-1" href="@Url.Action("Delete", "Customer", new { Area = "Admin", id = item.Id })" title="Xóa">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center m-3" role="alert">
                Không có khách hàng nào phù hợp với tiêu chí.
            </div>
        }
    </div>
    @if (Model != null && Model.PageCount > 1)
    {
        <div class="card-footer clearfix">
            <div class="row">
                <div class="col-sm-12 col-md-5 d-flex align-items-center">
                    <div class="dataTables_info" role="status" aria-live="polite">
                        Hiển thị @Model.FirstItemOnPage đến @Model.LastItemOnPage trong tổng số @Model.TotalItemCount mục
                    </div>
                </div>
                <div class="col-sm-12 col-md-7">
                    <nav aria-label="Page navigation example">
                        @Html.PagedListPager(Model, page => Url.Action("Index", "Customer",
                                 new
                                 {
                                     page,
                                     searchString = ViewBag.CurrentSearch,
                                     activeStatus = ViewBag.CurrentActiveStatus,
                                     sortBy = ViewBag.CurrentSortBy
                                 }),
                                 new PagedListRenderOptions
                    {
                        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                        DisplayLinkToLastPage = PagedListDisplayMode.Always,
                        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                        DisplayLinkToNextPage = PagedListDisplayMode.Always,
                        DisplayLinkToIndividualPages = true,
                        MaximumPageNumbersToDisplay = 5,
                        LiElementClasses = new[] { "page-item" },
                        PageClasses = new[] { "page-link" },
                        UlElementClasses = new[] { "pagination", "pagination-sm", "m-0", "float-right" },
                        LinkToFirstPageFormat = "«« Đầu",
                        LinkToPreviousPageFormat = "« Trước",
                        LinkToNextPageFormat = "Sau »",
                        LinkToLastPageFormat = "Cuối »»",
                        EllipsesFormat = "&#8230;"
                    })
                    </nav>
                </div>
            </div>
        </div>
    }
    }
</div>

@section Scripts {
    <script src="~/Admin_assets/plugins/select2/js/select2.full.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.select2bs4').select2({
                theme: 'bootstrap4',
                minimumResultsForSearch: Infinity
            });
        });
    </script>
}